# Dockerfile with Playwright support for frontend validation
FROM python:3.12-slim

# Install system dependencies for Playwright
RUN apt-get update && apt-get install -y \
    libx11-6 libxcomposite1 libxdamage1 libxrandr2 libxkbcommon0 \
    libgtk-3-0 libgbm1 libnss3 libatk-bridge2.0-0 libasound2 \
    libxss1 libxtst6 libxcb-dri3-0 \
    libxcursor1 libxfixes3 libxi6 \
    libxrender1 libcairo-gobject2 libdbus-glib-1-2 libdbus-1-3 \
    libatspi2.0-0 libdrm2 libxkbcommon-x11-0 \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy requirements and install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Install Playwright and browsers
RUN pip install --no-cache-dir playwright pytest-playwright
RUN playwright install --with-deps chromium

# Copy application code
COPY . .

# Create tests directory if it doesn't exist
RUN mkdir -p tests

# Expose Streamlit port
EXPOSE 8501

# Default command runs Streamlit
CMD ["streamlit", "run", "frontend/app.py", "--server.port=8501", "--server.address=0.0.0.0"]
