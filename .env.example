
# Environment variables for development
# Rename this file to .env and configure your settings

# Application Settings
DEBUG=true
TESTING=false

# API Configuration  
OPENWEATHERMAP_API_KEY=your_api_key_here
API_TIMEOUT=30
API_RATE_LIMIT_DELAY=2.0
API_MAX_RETRIES=3

# Analysis Settings
GRID_SIZE=10
GRID_SPAN_DEGREES=0.04
HIGH_SCORE_PERCENTILE=85
TRAVEL_CORRIDOR_PERCENTILE=90
MAX_STANDS_TO_RETURN=5
MIN_CONFIDENCE_THRESHOLD=50.0

# Security Settings
MAX_REQUEST_RATE_PER_MINUTE=60
INPUT_VALIDATION_ENABLED=true
CORS_ORIGINS=*
RATE_LIMITING_ENABLED=true

# Cache Settings
CACHE_ENABLED=false
CACHE_TTL_HOURS=24
MEMORY_CACHE_SIZE=1000

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/app.log
LOG_MAX_FILE_SIZE_MB=10
LOG_BACKUP_COUNT=5
